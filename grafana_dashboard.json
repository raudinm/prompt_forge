{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "row",
      "title": "Django Application Metrics",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests per Second",
      "targets": [
        {
          "expr": "rate(django_http_requests_total_by_method_total[1m])",
          "legendFormat": "{{method}}",
          "interval": ""
        }
      ],
      "gridPos": { "x": 0, "y": 1, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Request Duration (avg)",
      "targets": [
        {
          "expr": "rate(django_http_requests_latency_seconds_sum[1m]) / rate(django_http_requests_latency_seconds_count[1m])",
          "legendFormat": "avg latency (s)"
        }
      ],
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Error Rate (4xx / 5xx)",
      "targets": [
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total{status=~'4..'}[5m]))",
          "legendFormat": "4xx"
        },
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total{status=~'5..'}[5m]))",
          "legendFormat": "5xx"
        }
      ],
      "gridPos": { "x": 0, "y": 9, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Active Database Connections",
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "connections"
        }
      ],
      "gridPos": { "x": 12, "y": 9, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "PostgreSQL Query Duration (avg)",
      "targets": [
        {
          "expr": "rate(pg_stat_statement_total_time_seconds_sum[1m]) / rate(pg_stat_statement_total_time_seconds_count[1m])",
          "legendFormat": "query time (s)"
        }
      ],
      "gridPos": { "x": 0, "y": 17, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Database Rows Fetched vs Inserted",
      "targets": [
        {
          "expr": "rate(pg_stat_database_tuples_fetched[1m])",
          "legendFormat": "rows fetched"
        },
        {
          "expr": "rate(pg_stat_database_tuples_inserted[1m])",
          "legendFormat": "rows inserted"
        }
      ],
      "gridPos": { "x": 12, "y": 17, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m]) * 100",
          "legendFormat": "CPU"
        }
      ],
      "gridPos": { "x": 0, "y": 25, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (MB)",
      "targets": [
        {
          "expr": "process_resident_memory_bytes / 1024 / 1024",
          "legendFormat": "Memory MB"
        }
      ],
      "gridPos": { "x": 12, "y": 25, "w": 12, "h": 8 }
    }
  ],
  "schemaVersion": 36,
  "title": "Django + PostgreSQL Monitoring",
  "timezone": "browser",
  "version": 1,
  "refresh": "10s"
}
